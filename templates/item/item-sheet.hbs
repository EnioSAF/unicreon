<form class="{{cssClass}} unicreon item-sheet" autocomplete="off">
  <header class="sheet-header flexrow">
    <div class="item-image">
      <img src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>

    <div class="item-summary flexcol">
      <div class="item-name">
        <input type="text" name="name" value="{{item.name}}" />
      </div>

      <div class="item-meta flexrow">
        <span class="tag">Objet</span>
        {{#if system.category}}
        <span class="tag">{{system.category}}</span>
        {{/if}}
        {{#if system.pricePo}}
        <span class="tag">{{system.pricePo}} PO</span>
        {{/if}}
      </div>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="props" data-group="primary">Propri√©t√©s</a>
    <a class="item" data-tab="description" data-group="primary">Description</a>
  </nav>

  <section class="sheet-body">

    <!-- ONGLET PROPRI√âT√âS -->
    <div class="tab" data-group="primary" data-tab="props">

      <div class="form-group">
        <label>Raret√©</label>
        <select name="system.rarity">
          <option value="commun" {{optionSel system.rarity "commun" }}>Commun</option>
          <option value="rare" {{optionSel system.rarity "rare" }}>Rare</option>
          <option value="tres-rare" {{optionSel system.rarity "tres-rare" }}>Tr√®s rare</option>
          <option value="unique" {{optionSel system.rarity "unique" }}>Unique</option>
        </select>
      </div>

      <div class="form-group">
        <label>Prix (PO)</label>
        <input type="number" name="system.pricePo" value="{{system.pricePo}}" />
      </div>

      <div class="form-group">
        <label>Encombrement</label>
        <input type="number" name="system.encumbrance" value="{{system.encumbrance}}" />
      </div>

      <div class="form-group">
        <label>Capacit√© (PE)</label>
        <input type="number" name="system.capacityPe" value="{{system.capacityPe}}" />
      </div>

      <hr />

      <div class="form-group">
        <label>Objet √©quipable</label>
        <input type="checkbox" name="system.equippable" {{checked system.equippable}} />
      </div>

      <div class="form-group">
        <label>√âquip√© ?</label>
        <input type="checkbox" name="system.equipped" {{checked system.equipped}} />
      </div>

      <div class="form-group">
        <label>Utilisations restantes</label>
        <input type="number" name="system.uses" value="{{system.uses}}" min="0" />
        <span style="margin:0 0.25rem;">/</span>
        <input type="number" name="system.usesMax" value="{{system.usesMax}}" min="0" />
      </div>

      <div class="form-group">
        <label>D√©truire apr√®s usage ?</label>
        <input type="checkbox" name="system.destroyOnUse" {{checked system.destroyOnUse}} />
      </div>

      <div class="form-group">
        <label>&nbsp;</label>
        <button type="button" data-action="use-item">
          Utiliser cet objet
        </button>
      </div>

      <hr />

      <div class="form-group stacked">
        <label>Effet passif (quand √©quip√©)</label>
        <input type="text" name="system.passiveTag" value="{{system.passiveTag}}"
          placeholder="[puissance +1], [2 pv]" />
        <p class="hint">
          Appliqu√© automatiquement tant que l'objet est <strong>√©quip√©</strong>.
        </p>
      </div>

      <div class="form-group stacked">
        <label>Effet actif (tag UNICREON)</label>
        <input type="text" name="system.effectTag" value="{{system.effectTag}}"
          placeholder="[2 PV], [-1 PV], [puissance 3], [pouvoir 4]" />
        <p class="hint">
          Utilis√© par <strong>UNICREON.USE</strong>.
        </p>
      </div>

      {{!-- D√âFENSE ARMURE / BOUCLIER --------------------------------------}}
      {{#if (or (eq item.type "armure") (eq system.category "bouclier"))}}

      <hr />

      <div class="form-group stacked">
        <label>D√©fense (armure / bouclier)</label>
        <p class="hint">Utilis√© automatiquement lors des passes d'armes physiques.</p>
      </div>

      <div class="form-group">
        <label>Caract√©ristique de d√©fense</label>
        <select name="system.defense.caracKey">
          <option value="" {{optionSel system.defense.caracKey "" }}>Par d√©faut</option>
          <option value="agilite" {{optionSel system.defense.caracKey "agilite" }}>Agilit√©</option>
          <option value="puissance" {{optionSel system.defense.caracKey "puissance" }}>Puissance</option>
          <option value="volonte" {{optionSel system.defense.caracKey "volonte" }}>Volont√©</option>
          <option value="pouvoir" {{optionSel system.defense.caracKey "pouvoir" }}>Pouvoir</option>
        </select>
      </div>

      <div class="form-group">
        <label>Bonus au jet de d√©fense</label>
        <input type="number" name="system.defense.bonus" value="{{system.defense.bonus}}" />
      </div>

      <div class="form-group">
        <label>Absorption (PV)</label>
        <input type="number" name="system.defense.absorption" value="{{system.defense.absorption}}" />
      </div>

      {{/if}}

      {{!-- ATTAQUE / PASSE D'ARMES ----------------------------------------}}

      <hr />

      <div class="form-group stacked">
        <label>Attaque (optionnelle)</label>
        <p class="hint">Active la passe d'armes pour cette arme / cet objet.</p>
      </div>

      <div class="form-group">
        <label>Offensif ?</label>
        <input type="checkbox" name="system.attack.enabled" {{checked system.attack.enabled}} />
      </div>

      <div class="form-group">
        <label>Type d'attaque</label>
        <select name="system.attack.type">
          <option value="" {{optionSel system.attack.type "" }}>Standard</option>
          <option value="melee" {{optionSel system.attack.type "melee" }}>M√™l√©e</option>
          <option value="ranged" {{optionSel system.attack.type "ranged" }}>Distance</option>
          <option value="spell" {{optionSel system.attack.type "spell" }}>Magique</option>
        </select>
      </div>

      <div class="form-group">
        <label>Caract√©ristique d'attaque</label>
        <select name="system.attack.caracKey">
          <option value="" {{optionSel system.attack.caracKey "" }}>Depuis la comp√©tence</option>
          <option value="puissance" {{optionSel system.attack.caracKey "puissance" }}>Puissance</option>
          <option value="agilite" {{optionSel system.attack.caracKey "agilite" }}>Agilit√©</option>
          <option value="perception" {{optionSel system.attack.caracKey "perception" }}>Perception</option>
          <option value="volonte" {{optionSel system.attack.caracKey "volonte" }}>Volont√©</option>
          <option value="pouvoir" {{optionSel system.attack.caracKey "pouvoir" }}>Pouvoir</option>
        </select>
      </div>

      <div class="form-group">
        <label>Difficult√© de base</label>
        <input type="number" min="2" max="10" name="system.attack.baseDifficulty"
          value="{{system.attack.baseDifficulty}}" />
      </div>

      <div class="form-group">
        <label>D√©g√¢ts</label>
        <input type="text" name="system.attack.damage" value="{{system.attack.damage}}" />
      </div>

      <div class="form-group">
        <label>Co√ªt en actions</label>
        <input type="number" name="system.attack.actionsCost" value="{{system.attack.actionsCost}}" min="0" />
      </div>

      <div class="form-group">
        <label>Autoriser la d√©pense de PK ?</label>
        <input type="checkbox" name="system.attack.usePK" {{checked system.attack.usePK}} />
      </div>

      <!-- DONS (GRANTS) --------------------------------------------------->
      <hr />

      <section class="form-group stacked">
        <h3>Dons (comp√©tences / sorts accord√©s)</h3>

        <div class="granted-list">
          {{#each system.grantedItems as |grant i|}}
          <div class="grant-row" data-index="{{i}}">
            <select name="system.grantedItems.{{i}}.pack">
              <option value="">‚Äî Compendium ‚Äî</option>
              {{#each ../packs as |p|}}
              <option value="{{p.collection}}" {{optionSel grant.pack p.collection}}>
                {{p.label}}
              </option>
              {{/each}}
            </select>

            <input type="text" name="system.grantedItems.{{i}}.name" value="{{grant.name}}"
              placeholder="Nom de l‚Äôitem" />

            <button type="button" class="grant-del">üóë</button>
          </div>
          {{/each}}
        </div>

        <button type="button" class="grant-add">Ajouter un don</button>
      </section>

    </div> <!-- fin onglet props -->

    <!-- ONGLET DESCRIPTION -->
    <div class="tab" data-group="primary" data-tab="description">
      <div class="form-group stacked">
        <label>Description</label>
        {{editor system.description target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>

  </section>
</form>